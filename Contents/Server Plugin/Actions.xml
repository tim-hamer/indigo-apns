<?xml version="1.0"?>
<Actions>
  <Action id="sendnotification" deviceFilter="self">
    <Name>Send Notification</Name>
    <CallbackMethod>sendNotification</CallbackMethod>
    <ConfigUI>
      <Field type="textfield" id="alert">
        <Label>Alert:</Label>
      </Field>
      <Field type="textfield" id="badge" defaultValue="0">
        <Label>Badge:</Label>
      </Field>
      <Field type="menu" id="sound">
        <Label>Sound:</Label>
        <List>
          <Option value="default">Default</Option>
        </List>
      </Field>
      <Field type="checkbox" id="useCondition" defaultValue="false">
        <Label>Use Condition:</Label>
        <Description>Only send notification when condition is met</Description>
      </Field>
      <Field type="textfield" id="conditionVariable" enabledBindingId="useCondition">
        <Label>Variable ID:</Label>
      </Field>
      <Field type="textfield" id="conditionValue" defaultValue="true" enabledBindingId="useCondition">
        <Label>Value:</Label>
      </Field>
    </ConfigUI>
  </Action>
</Actions>
